// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id        String @id
  title     String @unique
  image     String
  isbn      String @unique
  coverType String
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  role     String
}
